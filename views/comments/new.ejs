<% include ../partials/header %>

    <div class="container">
        <div class="row">
            <h1 style="text-align: center">Add a new Comment to

                <%= pokemon.name%>
            </h1>
            <div style="width:30%;margin-top:0;margin-left:auto;margin-right:auto">
                <form action="/pokemon/<%=pokemon._id%>/comments" method="POST" class="form-horizontal">

                    <div class="form-group"><label for="text">COMMENT</label> <input type="text" name="comment[text]" placeholder="text" class="form-control"></div>
                    <div class="form-group"><input type="submit" value="Add comment" class="btn btn-primary btn-block">
                    </div>
                </form>
                <a href="/pokemon">Go Back</a>
            </div>

        </div>
    </div>
    <% include ../partials/footer %>